{
  "name": "hotsdrafter",
  "version": "1.2.6",
  "description": "Predict and support drafts for running hots matches",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make:all": "yarn make:linux && yarn make:win32",
    "make:win32": "electron-forge make --platform=win32",
    "make:linux": "electron-forge make --platform=linux",
    "publish": "electron-forge publish"
  },
  "keywords": [
    "hots",
    "draft",
    "predition",
    "helper"
  ],
  "author": "Jens N",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-flatpak": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-snap": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "electron": "^27.0.0",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "@electron-forge/publisher-github": "^7.10.2",
    "bootstrap": "^5.3.8",
    "cheerio": "^0.22.0",
    "electron-squirrel-startup": "^1.0.0",
    "follow-redirects": "^1.15.11",
    "hots-replay": "^1.0.4",
    "jimp": "^0.16.4",
    "jquery": "^3.7.1",
    "popper.js": "^1.16.1",
    "screenshot-desktop": "^1.15.3",
    "seek-bzip": "^2.0.0",
    "tesseract.js": "^5.1.1",
    "twig": "^1.15.4"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip",
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm",
          "flatpak",
          "snap",
          "squirrel"
        ]
      },
      "packagerConfig": {
        "asar": {
          "unpack": "**/node_modules/screenshot-desktop/lib/win32/{app.manifest,screenCapture_1.3.2.bat}"
        },
        "icon": "build/icon.png",
        "ignore": [
          "/cache",
          "/debug"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "defaultPlatforms": [
            "linux",
            "win32"
          ],
          "config": {
            "name": "hotsdrafter",
            "iconUrl": "https://github.com/ForsakenNGS/hotsdrafter/raw/master/build/icon.ico",
            "setupIcon": "./build/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "platforms": [
            "linux",
            "win32"
          ],
          "config": {
            "repository": {
              "owner": "ForsakenNGS",
              "name": "hotsdrafter"
            },
            "prerelease": true
          }
        }
      ]
    }
  }
}
